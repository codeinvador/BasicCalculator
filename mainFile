#include <stdio.h>
void main ()
{
    int a, b, c, p;
    
    printf("Enter your first number : ");
    scanf("%d", &a);
    printf("Enter your second number : ");
    scanf("%d", &b);
    
    printf("Enter 1 for addition, 2 for subtraction, 3 for multiplication and 4 for division : ");
    scanf("%d", &c);
    
        if (c==1)
        {
            p=a+b;
            printf("Your answer is %d", p);
        }
        
        else if (c==2)
        {
            p=a-b;
            printf("Your answer is %d", p);
        }
        
        else if (c==3)
        {
            p=a*b;
            printf("Your answer is %d", p);
        }
        
        else
        {
            p=a/b;
            printf("Your answer is %d", p);
        }
        
        return 0;
}
